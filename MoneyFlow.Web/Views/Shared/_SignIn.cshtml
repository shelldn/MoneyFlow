<form id="sign-in" name="sign-in" novalidate
      ng-submit="signIn()">

    <div mf-expand="sign in" ng-init="data = this['sign-in']">
        <input name="user-name" type="email"
               placeholder="email"
               ng-model-options="{ updateOn: 'blur' }"
               ng-model="userName"
               required />

        <div class="validation-box" ng-messages="data['user-name'].$error">
            <span class="validation-msg" ng-message="email">This is not a valid email</span>
            <span class="validation-msg" ng-message="required">This field is required</span>
        </div>

        <input name="password" type="password"
               placeholder="password"
               ng-model-options="{ updateOn: 'blur' }"
               ng-model="password"
               required />

        <div class="validation-box" ng-messages="data['password'].$error">
            <span class="validation-msg" ng-message="required">This field is required</span>
        </div>

        <button class="btn btn-go" type="submit" ng-disabled="this['sign-in'].$invalid">Go</button>
    </div>
</form>