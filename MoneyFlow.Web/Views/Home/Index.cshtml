@model Cost

@{
    ViewBag.Title = "Costs tracker";
    ViewBag.AngularApp = "mf.tracker";
    ViewBag.MainCtrl = "TrackerCtrl as vm";
}

<form name="cost-data" ng-submit="vm.commit()">
    <fieldset ng-disabled="vm.isProcessing">

        @* Cost amount *@

        <div class="col col-4">
            @Html.TextBoxFor(m => m.Amount, new { ng_model = "vm.cost.amount" })
        </div>

        @* Cost cat. *@

        <div class="col col-8">
            @Html.TextBoxFor(m => m.Category, new
            {
                mf_lookup = "c as c.name from uow.cats",
                ng_model = "vm.cost.category.words"
            })
        </div>
        <button type="submit">ENTER</button>

    </fieldset>

</form>

@section Scripts {
    <script src="~/client/js/tracker.js"></script>
}